{
  "name": "e-com-website",
  "version": "0.0.1",
  "description": "An e-commerce website application",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=start ts-node --project tsconfig.json -r tsconfig-paths/register \"./src/server.ts\"",
    "dev": "cross-env NODE_ENV=development ts-node-dev --project tsconfig.json -r tsconfig-paths/register \"./src/server.ts\"",
    "dev:win": "cross-env NODE_ENV=dev ts-node-dev --poll --project tsconfig.json -r tsconfig-paths/register \"./src/server.ts\"",
    "dev:unx": "cross-env NODE_ENV=dev ts-node-dev --poll --project ./tsconfig.json -r tsconfig-paths/register \"./src/server.ts\"",
    "build": "cross-env NODE_ENV=build tsc -p . && tscpaths -p tsconfig.json -s ./src -o ./build",
    "build:run": "cross-env NODE_ENV=build node ./build/server.js",
    "build:win": "cross-env NODE_ENV=build copy .env.dev .\\build\\.env && tsc -p . && tscpaths -p tsconfig.json -s ./src -o ./build",
    "build:unx": "cross-env NODE_ENV=build cp ./.env.dev ./build/.env && tsc -p . && tscpaths -p ./tsconfig.json -s ./src -o ./build",
    "build:win:prod": "cross-env NODE_ENV=prod copy .env.prod .\\build\\.env && tsc -p . && tscpaths -p tsconfig.json -s ./src -o ./build",
    "build:unx:prod": "cross-env NODE_ENV=prod cp .env.prod ./build/.env && tsc -p . && tscpaths -p tsconfig.json -s ./src -o ./build",
    "prod:run": "cross-env NODE_ENV=prod node ./build/server.js",
    "test": ""
  },
  "author": "Md Sadman",
  "license": "MIT",
  "dependencies": {
    "crypto-ts": "^1.0.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "stripe": "^8.194.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.6",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "0.0.9",
    "typescript": "^4.5.3"
  }
}
